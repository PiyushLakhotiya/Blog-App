<%- include('partials/header') %>

<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div>
        <label>Title</label>
        <input type="text" name ="blog[title]" value="<%= blog.title %>" placeholder="title">
    </div>
    <div>
        <label>Image URL</label>
        <input type="text" name = "blog[image]" value="<%= blog.image %>" placeholder="image url">
    </div>
    <div>
        <label>Body</label>
        <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
    </div>
    <div>
        <button>Submit</button>
    </div>
</form>

<%- include('partials/footer') %>